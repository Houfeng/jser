{
    "debugMode": true,
    "connectionString": "mongodb://127.0.0.1/jser",
    "handlers": {
        "^/": "$./handlers/mvc"
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/{type}/page/{index}",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/edit",
                "target": "./topic-edit.js"
            },
            {
                "pattern": "/topic/edit/{id}",
                "target": "./topic-edit.js"
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic.js"
            },
            {
                "pattern": "/signup",
                "target": "./signup.js"
            },
            {
                "pattern": "/signin",
                "target": "./signin.js"
            },
            {
                "pattern": "/profile",
                "target": "./profile.js"
            },
            {
                "pattern": "/about",
                "target": "./about.js"
            }
        ]
    }
}
{
    "debugMode": true,
    "connectionString": "mongodb://localhost/jser",
    "handlers": {
        "^/": "$./handlers/mvc"
    },
    "filters": {
        "^/": "./filters/required"
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/edit/new",
                "action": "new",
                "target": "./topic-edit.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/edit/{id}",
                "target": "./topic-edit.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/{type}/page/{pageIndex}",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic-view.js"
            },
            {
                "pattern": "/signup",
                "target": "./signup.js"
            },
            {
                "pattern": "/signin",
                "target": "./signin.js"
            },
            {
                "pattern": "/forget-password",
                "target": "./forget-password.js"
            },
            {
                "pattern": "/profile",
                "target": "./profile.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/control-panel",
                "target": "./control-panel.js",
                "required": [
                    "signed",
                    "admin"
                ]
            },
            {
                "pattern": "/user/{id}",
                "target": "./user-info.js"
            },
            {
                "pattern": "/integral-list",
                "target": "./integral-list.js"
            },
            {
                "pattern": "/about",
                "target": "./about.js"
            },
            {
                "pattern": "/api",
                "target": "./api.js"
            },
            {
                "pattern": "/oauth/github",
                "target": "./oauth/github.js"
            },
            {
                "pattern": "/search",
                "target": "./search.js"
            }
        ]
    },
    "oauth": {
        "github": {
            "auth_url": "https://github.com/login/oauth/authorize",
            "token_url": "https://github.com/login/oauth/access_token",
            "redirect_uri": "http://jser.cc/oauth/github/callback",
            "user_url": "https://api.github.com/user",
            "client_id": "ceb6ca9d4988885dca39",
            "client_secret": "4c71041a71cb13e8a645000da3989909e5f618d9"
        }
    }
}
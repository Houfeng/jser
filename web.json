{
    "debugMode": true,
    "connectionString": "mongodb://127.0.0.1/jser",
    "handlers": {
        "^/": "$./handlers/mvc"
    },
    "filters": {
        "^/": "./filters/user-state"
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/{type}/page/{index}",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/edit/{id}",
                "target": "./topic-edit.js",
                "admin": true
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic-view.js"
            },
            {
                "pattern": "/signup",
                "target": "./signup.js"
            },
            {
                "pattern": "/signin",
                "target": "./signin.js"
            },
            {
                "pattern": "/profile",
                "target": "./profile.js",
                "admin": true
            },
            {
                "pattern": "/about",
                "target": "./about.js"
            },
            {
                "pattern": "/oauth/github",
                "target": "./oauth/github.js"
            },
            {
                "pattern": "/search",
                "target": "./search.js"
            }
        ]
    },
    "oauth": {
        "github": {
            "auth_url": "https://github.com/login/oauth/authorize",
            "token_url": "https://github.com/login/oauth/access_token",
            "redirect_uri": "http://localhost:8000/oauth/github/callback",
            "user_url": "https://api.github.com/user",
            "client_id": "ceb6ca9d4988885dca39",
            "client_secret": "4c71041a71cb13e8a645000da3989909e5f618d9"
        }
    }
}
{
    "debugMode": true,
    "db": "mongodb://127.0.0.1/jser",
    "handlers": {
        "^/": "$./handlers/mvc"
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/home",
                "target": "./home.js"
            },
            {
                "pattern": "/",
                "target": "./home.js"
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic.js"
            },
            {
                "pattern": "/login",
                "target": "./login.js"
            },
            {
                "pattern": "/profile",
                "target": "./profile.js"
            }
        ]
    }
}
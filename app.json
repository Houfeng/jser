{
    "showErrorDetail": false,
    "name": "JSER 社区",
    "domain": "JSER.CC",
    "author": "JSER Team",
    "keywords": "jser,社区,javascript,nodejs",
    "description": "JSER 是一个 “纯粹、简单、自由” 的 “JS程序猿” 社区",
    "buildYear": "2015",
    "connStr": "mongodb://localhost/jser",
    "handlers": {
        "^/": "$./handlers/mvc",
        ".css$": "nokit-handler-less",
        ".less$": "nokit-handler-less"
    },
    "filters": {
        "^/": "./filters/required"
    },
    "folders": {
        "public": {
            "^/mditor": "./node_modules"
        }
    },
    "session": {
        "provider": "nokit-session-redis",
        "host": "localhost",
        "port": 6379
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/edit/new",
                "action": "new",
                "target": "./topic-edit.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/edit/{id}",
                "target": "./topic-edit.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/{type}/page/{pageIndex}",
                "target": "./topic.js"
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic-view.js"
            },
            {
                "pattern": "/signup",
                "target": "./signup.js"
            },
            {
                "pattern": "/signin",
                "target": "./signin.js"
            },
            {
                "pattern": "/forget-password",
                "target": "./forget-password.js"
            },
            {
                "pattern": "/profile",
                "target": "./profile.js",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/control-panel",
                "target": "./control-panel.js",
                "required": [
                    "signed",
                    "admin"
                ]
            },
            {
                "pattern": "/user/{id}",
                "target": "./user-info.js"
            },
            {
                "pattern": "/integral-list",
                "target": "./integral-list.js"
            },
            {
                "pattern": "/about",
                "target": "./about.js"
            },
            {
                "pattern": "/api",
                "target": "./api.js"
            },
            {
                "pattern": "/client",
                "target": "./client"
            },
            {
                "pattern": "/oauth/github",
                "target": "./oauth/github.js"
            },
            {
                "pattern": "/search",
                "target": "./search.js"
            }
        ]
    },
    "oauth": {
        "github": {
            "auth_url": "https://github.com/login/oauth/authorize",
            "token_url": "https://github.com/login/oauth/access_token",
            "redirect_uri": "http://jser.cc/oauth/github/callback",
            "user_url": "https://api.github.com/user",
            "client_id": "ceb6ca9d4988885dca39",
            "client_secret": "4c71041a71cb13e8a645000da3989909e5f618d9"
        }
    },
    "links": [
        {
            "name": "CNodeJs",
            "url": "http://www.cnodejs.org"
        },
        {
            "name": "SegmentFault",
            "url": "http://segmentfault.com/"
        },
        {
            "name": "Ruby China",
            "url": "https://ruby-china.org/"
        }
    ],
    "footbar": {
        "links": [
            {
                "name": "GitHub",
                "url": "https://github.com/jser-dev"
            },
            {
                "name": "微博",
                "url": "http://weibo.com/jser-dev"
            },
            {
                "name": "Twitter",
                "url": "http://twitter.com/jser-dev"
            }
        ],
        "info": "一个 “纯粹、简单、自由” 的 “JS程序猿” 社区"
    },
    "guardian": {
        "name": "@Houfeng",
        "url": "https://github.com/houfeng"
    }
}
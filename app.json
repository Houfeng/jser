{
    "showErrorDetail": false,
    "name": "JSER 社区",
    "domain": "JSER.CC",
    "author": "JSER Team",
    "keywords": "jser社区,js社区,jser,js,javascript,nodejs,node.js,前端,前端社区,社区",
    "description": "JSER 是一个 “纯粹、简单、自由” 的 “JS程序猿” 社区",
    "buildYear": "2015",
    "connStr": "mongodb://localhost/jser",
    "handlers": {
        "^/": "$./handlers/mvc",
        ".css$": "nokit-handler-less",
        ".less$": "nokit-handler-less"
    },
    "filters": {
        "^/::access": "./filters/access",
        "^/::data": "./filters/common-data"
    },
    "folders": {
        "public": {
            "^/mditor": "./node_modules"
        }
    },
    "session": {
        "provider": "nokit-session-redis",
        "host": "localhost",
        "port": 6379
    },
    "mvc": {
        "paths": {
            "controller": "./controllers",
            "view": "./views"
        },
        "routes": [
            {
                "pattern": "/",
                "target": "./topic-list"
            },
            {
                "pattern": "/topic",
                "target": "./topic-list"
            },
            {
                "pattern": "/topic/new",
                "action": "new",
                "target": "./topic-edit",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/{id}/edit",
                "target": "./topic-edit",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/topic/{type}/p{pageIndex}",
                "target": "./topic-list"
            },
            {
                "pattern": "/topic/{id}",
                "target": "./topic-view"
            },
            {
                "pattern": "/signup",
                "target": "./signup"
            },
            {
                "pattern": "/verify/{verifyCode}",
                "target": "./verify-mail"
            },
            {
                "pattern": "/signin",
                "target": "./signin"
            },
            {
                "pattern": "/forget-password",
                "target": "./forget-password"
            },
            {
                "pattern": "/profile",
                "target": "./profile",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/control-panel",
                "target": "./control-panel",
                "required": [
                    "signed",
                    "admin"
                ]
            },
            {
                "pattern": "/user/top",
                "target": "./user-top"
            },
            {
                "pattern": "/user/{id}",
                "target": "./user-info"
            },
            {
                "pattern": "/message",
                "target": "./message",
                "required": [
                    "signed"
                ]
            },
            {
                "pattern": "/about",
                "target": "./about"
            },
            {
                "pattern": "/api",
                "target": "./api"
            },
            {
                "pattern": "/client",
                "target": "./client"
            },
            {
                "pattern": "/oauth/github",
                "target": "./oauth/github"
            },
            {
                "pattern": "/search",
                "target": "./search"
            }
        ]
    },
    "topicTypes": {
        "good": {
            "text": "精华",
            "admin": true
        },
        "ask": {
            "text": "问答"
        },
        "share": {
            "text": "分享"
        },
        "event": {
            "text": "活动"
        },
        "job": {
            "text": "招聘"
        }
    },
    "mail": {
        "conn": {
            "host": "smtp.exmail.qq.com",
            "port": 465,
            "secure": true,
            "auth": {
                "user": "service@jser.cc",
                "pass": "Pass01!"
            }
        },
        "reg_tmpl": {
            "subject": "请确认你在 JSER 的注册邮箱",
            "body": "请点击如下链接，激活您的邮箱: http://127.0.0.1:8000/verify/<%= this.verifyCode %>"
        },
        "pwd_tmpl": {
            "subject": "JSER 密码找回",
            "body": "请点击如下链接，找回您的密码: <%= this.verifyCode %>"
        }
    },
    "oauth": {
        "github": {
            "auth_url": "https://github.com/login/oauth/authorize",
            "token_url": "https://github.com/login/oauth/access_token",
            "redirect_uri": "http://jser.cc:8000/oauth/github/callback",
            "user_url": "https://api.github.com/user",
            "client_id": "ceb6ca9d4988885dca39",
            "client_secret": "4c71041a71cb13e8a645000da3989909e5f618d9"
        }
    },
    "roles": {
        "superAdmin": {
            "text": "超级管理员",
            "access": []
        },
        "admin": {
            "text": "普通管理员",
            "access": []
        },
        "user": {
            "text": "普通用户",
            "access": []
        }
    },
    "scoreRule": {
        "topic": 2,
        "comment": 1
    },
    "links": [
        {
            "name": "CNodeJs",
            "url": "http://www.cnodejs.org"
        },
        {
            "name": "SegmentFault",
            "url": "http://segmentfault.com/"
        },
        {
            "name": "Ruby China",
            "url": "https://ruby-china.org/"
        }
    ],
    "footbar": {
        "links": [
            {
                "name": "GitHub",
                "url": "https://github.com/jser-dev"
            },
            {
                "name": "微博",
                "url": "http://weibo.com/jser-dev"
            },
            {
                "name": "Twitter",
                "url": "http://twitter.com/jser-dev"
            }
        ],
        "info": "一个 “纯粹、简单、自由” 的 “JS程序猿” 社区"
    },
    "guardian": {
        "name": "@jser-dev",
        "url": "https://github.com/jser-dev"
    }
}
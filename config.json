{
    "showErrorDetail": false,
    "name": "JSER社区",
    "domain": "JSER.CC",
    "author": "JSER Team",
    "keywords": "jser社区,js社区,jser,js,javascript,nodejs,node.js,前端,前端社区,社区",
    "description": "JSER 是一个 “纯粹、简单、自由” 的 “JS程序猿” 社区",
    "buildYear": "2015",
    "port": 443,
    "https": {
        "enabled": true,
        "cert": "./_certs/jser.cc.crt",
        "key": "./_certs/jser.cc.key",
        "redirectPort": 80
    },
    "connStr": "mongodb://localhost/jser",
    "handlers": {
        "^/": "$./handlers/mvc",
        ".css$": "nokit-handler-less",
        ".less$": "nokit-handler-less"
    },
    "filters": {
        "^/::access": "./filters/access",
        "^/::data": "./filters/common-data"
    },
    "folders": {
        "public": {
            "^/mditor": "./node_modules"
        }
    },
    "session": {
        "provider": "nokit-session-redis",
        "host": "localhost",
        "port": 6379
    },
    "mvc": {
        "routes": {
            "/::get": "./topic-list",
            "/topic::get": "./topic-list",
            "/topic/{type}/p{pageIndex}": "./topic-list",
            "/topic/new": {
                "action": "new",
                "target": "./topic-edit",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/edit": {
                "target": "./topic-edit",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/edit/submit::post::submit": {
                "target": "./topic-edit",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/delete::post::delete": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/setTop::post::setTop": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/setGood::post::setGood": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/removeTop::post::removeTop": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/removeGood::post::removeGood": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/addComment::post::addComment": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}/delComment::post::delComment": {
                "target": "./topic-view",
                "required": [
                    "signed"
                ]
            },
            "/topic/{id}": "./topic-view",
            "/signup": "./signup",
            "/signup/submit::post": "./signup",
            "/verify/{verifyCode}": "./verify-mail",
            "/signin": "./signin",
            "/signin::submit::post": "./signin",
            "/forget-password": "./forget-password",
            "/forget-password/submit::post::submit": "./forget-password",
            "/profile": {
                "target": "./profile",
                "required": [
                    "signed"
                ]
            },
            "/control-panel": {
                "target": "./control-panel",
                "required": [
                    "signed",
                    "admin"
                ]
            },
            "/user/top": "./user-top",
            "/user/{name}": "./user-info",
            "/message": {
                "target": "./message",
                "required": [
                    "signed"
                ]
            },
            "/about": "./about",
            "/api": "./api",
            "/client": "./client",
            "/oauth/github": "./oauth/github",
            "/search": "./search"
        }
    },
    "topicTypes": {
